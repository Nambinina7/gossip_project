<div class="text-center mt-4">
	<h1><span class="text-info"><%= @gossips.title %></span> de <a href="/user/<%= @gossips.user.id %>"><%= @gossips.user.first_name %></a>
	</h1>
	 <div class="display-4">
		<%= @gossips.content %>
	</div>
	<p> <%=@gossips.created_at%></p> 
	
</div>

<div class="text-center">
	<a class="btn btn-primary" href ="/gossips/<%= @gossips.id %>/edit">Edit_gossip</a><br><br>
	<a class="btn btn-primary" href="" data-method= "delete">Delete_gossip</a>
	
</div><br>

 <div class="text-center">
	<% @gossips.comments.each do |comment|%>
		<a href="/user/<%comment.user_id%>"><%=comment.user.first_name%></a>
		<p><%=comment.content%></p>
	<% end %>
</div> <br>


<div class="text-center">
    <%= form_tag url_for(controller:'comments',action: 'create', :gossip_id => @gossips.id), method: "post" do %>
			<%= label_tag 'content' %>
      <%= text_area_tag 'content' %>
      <br /> <br />

      <%= submit_tag "Commenter" %>

    <% end %>
  </div>





 


	
	
